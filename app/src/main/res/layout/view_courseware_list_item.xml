<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dip"
                android:gravity="bottom"
    >


    <ImageView
        android:id="@+id/item_courseware_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/item_courseware_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_courseware_icon"
        >

        <TextView
            android:id="@+id/item_courseware_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/item_courseware_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/item_courseware_name"
            android:padding="5dip">

            <TextView
                android:id="@+id/item_courseware_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小学"
                android:paddingRight="30dip"
                android:textColor="@color/gray_text"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/item_courseware_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_courseware_level"
                android:paddingRight="30dip"
                android:text="0 ￥"
                android:textColor="@color/gray_text"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/item_courseware_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_courseware_level"
                android:paddingRight="30dip"
                android:text="10 M"
                android:textColor="@color/gray_text"
                android:textSize="12sp"/>

        </LinearLayout>

        
        <TextView
            android:id="@+id/item_courseware_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="12月12日"
            android:textColor="@color/gray_text"
            android:textSize="12sp"/>

    </RelativeLayout>



</RelativeLayout>  
